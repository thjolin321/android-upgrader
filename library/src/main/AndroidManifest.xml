<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.thjolin.update">

    <application>
        <provider
            android:name="com.thjolin.download.database.DownloadProvider"
            android:authorities="${applicationId}.com.example.download"
            android:exported="false" />

        <activity
            android:name="com.thjolin.download.permission.MyPermissionActivity"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />

        <activity
            android:name="com.thjolin.install.InstallApkActivity"
            android:excludeFromRecents="true"
            android:theme="@style/DialogActivity"
            android:launchMode="singleTop">
            <intent-filter>
                <action
                    android:name="com.example.android.apis.content.SESSION_API_PACKAGE_INSTALLED"
                    android:exported="true" />
            </intent-filter>
        </activity>
    </application>

</manifest>